<%= render 'shared/error', obj: @user %>
<div class="form_horizontal well" >
<%= form_for(@user ,:url => doctors_path, :html => { :multipart => true },:method => :POST) do |f| %>

  <div class="form-group">
      <div class="row">
        <div class="col col-sm-10">
          <%= f.label :email, class: "col-sm-3 text-right" %>
        <div class="col col-sm-8">
          <%= f.text_field :email, class: "form-control" %>
        </div>
        </div>
      </div>
  </div>
  <% if @user.new_record? %>
  <div class="form-group">
      <div class="row">
        <div class="col col-sm-10">
          <%= f.label :password, class: "col-sm-3 text-right" %>
        <div class="col col-sm-8">
          <%= f.password_field :password, class: "form-control" %>
        </div>
        </div>
      </div>
  </div>
  <% end %>
  
  <%= f.hidden_field :user_type, :value => "doctor"%>
  <%= f.fields_for :doctor do |doctor| %>
  
  <div class="form-group">
      <div class="row">
        <div class="col col-sm-10">
          <%= doctor.label :name, class: "col-sm-3 text-right" %>
        <div class="col col-sm-8">
          <%= doctor.text_field :name, class: "form-control" %>
        </div>
        </div>
      </div>
  </div>
  
  <div class="form-group">
      <div class="row">
        <div class="col col-sm-10">
          <%= doctor.label :address, class: "col-sm-3 text-right" %>
        <div class="col col-sm-8">
          <%= doctor.text_field :address, class: "form-control" %>
        </div>
        </div>
      </div>
  </div>
  
  <div class="form-group">
      <div class="row">
        <div class="col col-sm-10">
          <%= doctor.label :city, class: "col-sm-3 text-right" %>
        <div class="col col-sm-8">
          <%= doctor.text_field :city, class: "form-control " %>
        </div>
        </div>
      </div>
  </div>
  <div class="form-group">
      <div class="row">
        <div class="col col-sm-10">
          <%= doctor.label :state, class: "col-sm-3  text-right" %>
        <div class="col col-sm-8">
          <%= doctor.text_field :state, class: "form-control" %>
        </div>
        </div>
      </div>
  </div>
  <div class="form-group">
      <div class="row">
        <div class="col col-sm-10">
          <%= doctor.label :zip_code, class: "col-sm-3 text-right" %>
        <div class="col col-sm-8">
          <%= doctor.text_field :zip_code, class: "form-control" %>
        </div>
        </div>
      </div>
  </div>
  <div class="form-group">
      <div class="row">
        <div class="col col-sm-10">
          <%= doctor.label :schoo_graduated, class: "col-sm-3 text-right" %>
        <div class="col col-sm-8">
          <%= doctor.text_field :schoo_graduated, class: "form-control" %>
        </div>
        </div>
      </div>
  </div>
  
  <div class="form-group">
      <div class="row">
        <div class="col col-sm-10">
          <%= doctor.label :years_in_practice, class: "col-sm-3 text-right" %>
        <div class="col col-sm-8">
          <%= doctor.text_field :years_in_practice, class: "form-control" %>
        </div>
        </div>
      </div>
  </div>
  
  <div class="form-group col-sm-4">
      <%= doctor.submit @user.new_record? ? 'Create Doctor' : 'Update Doctor', class: 'btn btn-success', id: 'appointment_sub' %>
    </div>
    <% end %>
<% end %>
</div>