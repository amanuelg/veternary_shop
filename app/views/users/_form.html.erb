<p>
<%= render 'shared/error', obj: @user %>
<div class="row">
        <div class="col-md-8 col-md-offset-2 col-sm-12 col-sm-12 well">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                    <img src="/assets/logo.jpg" height="200" width="100">
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                    <div class="form_horizontal pull-right">
                    <legend>Create Account</legend>
                    <%= form_for @user, url: {action: "create"} do |f| %>
                        
                        <% if !logged_in? %>
                            <%= f.fields_for :customer do |customer| %>
                                <div class= "form-group">
                                    <%= customer.label :full_name %>
                                    <%= customer.text_field :full_name%>
                                </div>
                            <% end %>
                            <%= f.hidden_field :user_type, :value=> "customer" %>
                        <% else %>
                            <%= f.hidden_field :user_type, :value=> "receptionist" %>
                        <% end %>
                        <div class= "form-group">
                            <%= f.label :email %>
                            <%= f.text_field :email%>
                        </div>
                        
                        <div class= "form-group">
                            <%= f.label :password %>
                            <%= f.password_field :password %>
                        </div>
                        
                        <%= f.submit @user.new_record? ? 'Register' : 'Edit Profile', class: 'btn btn-success'%>
                    
                    <% end %>
                </div>
                </div>
            </div>
        </div>
    </div>
    
</p>


